{
  "name": "learn-node-js",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "nodemon src/index.ts",
    "debug": "nodemon --exec \"node --inspect-brk=0.0.0.0:9229 --require ts-node/register src/index.ts\"",
    "build": "npm run lint && npm run prisma:deploy && ./node_modules/typescript/bin/tsc",
    "start": "node dist/index.js",
    "test": "npm run prisma:reset:force && npm run prisma:push:force && jest -i --testTimeout=10000",
    "lint": "eslint src --fix",
    "prisma:dev": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:reset": "prisma migrate reset",
    "prisma:generate": "prisma generate",
    "prisma:reset:force": "dotenv -e .env.test -- prisma migrate reset -f --skip-generate",
    "prisma:push:force": "dotenv -e .env.test -- prisma db push --skip-generate --force-reset",
    "prepare": "husky install"
  },
  "dependencies": {
    "@prisma/client": "^5.9.1",
    "@types/jest": "^29.5.11",
    "@types/supertest": "^6.0.2",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "jade": "~1.11.0",
    "jest": "^29.7.0",
    "joi": "^17.12.0",
    "morgan": "~1.9.1",
    "pg": "^8.11.3",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.5",
    "@types/pg": "^8.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "babel-eslint": "^10.1.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.1",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.1",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.4",
    "prisma": "^5.9.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --quiet --fix"
    ],
    "*.{json,md,html}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  }
}
